CXX = icpc
CXXCUDA = nvcc
PATHTOBOOST = /home/gkhoury/boost_1_52_0/
CFLAGS = -O2 -I $(PATHTOBOOST) 
OMPFLAGS = -openmp 
Default: MD
OMP = cellList.o integrator.o main.o nvt.o potential.o system.o utils.o

%.o : %.c
	$(CXX) $(CFLAGS) -c $<

cellList.o : cellList.cpp
	$(CXX) -DNVCC $(OMPFLAGS) $(CFLAGS) -c cellList.cpp
	
integrator.o : integrator.cu
	$(CXXCUDA) -DNVCC $(CFLAGS) -c integrator.cu

main.o : main.cpp
	$(CXX) -DNVCC $(OMPFLAGS) $(CFLAGS) -c main.cpp
	
nvt.o : nvt.cpp
	$(CXX) -DNVCC $(OMPFLAGS) $(CFLAGS) -c nvt.cpp
	
potential.o : potential.cpp
	$(CXX) -DNVCC $(OMPFLAGS) $(CFLAGS) -c potential.cpp
	
system.o : system.cpp
	$(CXX) -DNVCC $(OMPFLAGS) $(CFLAGS) -c system.cpp

utils.o : utils.cpp
	$(CXX) -DNVCC $(OMPFLAGS) $(CFLAGS) -c utils.cpp

MD: $(OMP)
	$(CXX) -lcudart $(OMPFLAGS) -o md $(CFLAGS) $(OMP) 

clean:
	$(RM) md
	$(RM) *.o
